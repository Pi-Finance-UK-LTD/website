---
import favicon from '../images/favicon.svg'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pi Finance UK Ltd" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  * {
    box-sizing: border-box;
  }
  :root {
    --bg-color: #000;
    --bg-alt-color: #fff;

    --primary-color-1: #2534fa;
    --primary-color-2: #5c25fa;
    --primary-color-3: #a125fa;
    --primary-color-4: #9200fa;
    --primary-color-5: #e725fa;
    --primary-color-6: #fa259d;

    --primary-bg: linear-gradient(
      110deg,
      var(--primary-color-1),
      var(--primary-color-6)
    );
  }

  .gradient-background {
  }

  @keyframes gradient-animation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  html,
  body {
    font-family: system-ui, sans-serif;
    background: var(--primary-bg);
    background-size: 180% 180%;

    animation: gradient-animation 5s ease infinite;
    margin: 0;
    padding: 0;
    font-size: 18px;
    font-weight: 300;
    color: #fff;
  }
  a {
    color: inherit;
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  h1,
  h2,
  h3 {
    font-weight: 400;
    margin-top: 0;
    margin-bottom: 1rem;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
  }
  h2 {
    font-size: 2rem;
  }
  h3 {
    font-size: 1.5rem;
  }
  label {
    font-size: 0.875rem;
    font-weight: 200;
  }
  small {
    font-size: 0.78rem;
    font-weight: 200;
  }

  @media (max-width: 800px) {
    html,
    body {
      font-size: 16px;
    }
  }
</style>
